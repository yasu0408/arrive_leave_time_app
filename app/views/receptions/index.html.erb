<h1>きょうのおともだち</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">なまえ</th>
      <th scope="col">きたじかん</th>
      <th scope="col">かえるじかん</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @receptions.each.with_index(1) do |reception, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= reception.name %></td>
        <td><%=l reception.arrive%></td>
        <td><%=l reception.leave %></td>
        <td>
          <%= link_to "詳細", reception %>
          <%= link_to "編集", edit_reception_path(reception) %>
          <%= link_to "削除", reception, method: :delete, data: { confirm: "削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
