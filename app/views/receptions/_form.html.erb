<%= render "layouts/error_messages" %>
<%= form_with model: @reception, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= form.label :arrive %>
    <%= form.text_field :arrive, class: "form-control form-control-lg", rows: 10 %>
  </div>
  <div class="form-group">
    <%= form.label :leave %>
    <%= form.text_field :leave, class: "form-control form-control-lg", rows: 10 %>
  </div>
  <div class="mt-5">
    <%= form.submit button_value, class: "btn btn-primary btn-block btn-lg " %>
  </div>
<% end %>
